#!/bin/bash

#printf "0.00 3.00 30.00 66.00 80.00 100.00 200.00 400.00 700.00 1000.00 5000.00 10000.00 15000.00 30000.00 70000.00 120000.00\n" | color_ifstat

piper --global "$@" \
'\d\d:\d\d:\d\d'	bright_black \
\
'[1-3]\d\.\d{2}'	rgb530 \
'[4-6]\d\.\d{2}'	rgb550 \
'[7-9]\d\.\d{2}'	rgb550 \
'\d{2}\.\d{2}+'		rgb520 \
'\d\.\d{2}'		rgb500 \
\
'[1-3]\d{2}.\d{2}'	rgb510 \
'[4-6]\d{2}.\d{2}'	rgb050 \
'[7-9]\d{2}.\d{2}'	rgb040 \
'\d\.\d{2}'		rgb030 \
'\d\.\d{2}'		rgb020 \
\
'[1-3]\d{3}\.\d{2}'	rgb010 \
'[4-6]\d{3}\.\d{2}'	rgb055 \
'[7-9]\d{3}.\d{2}'	rgb040 \
'[1-5]\d{4}\.\d{2}'	rgb035 \
'[6-9]\d{4}\.\d{2}'	rgb025 \
'\d{6,}\.\d{2}'		rgb555

